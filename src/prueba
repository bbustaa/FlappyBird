
funciona





export default class TomasController {
  constructor(jump) {
    this.jump = jump;
    this.name = 'Svetla';
  }

  loop(birdData, pipes, scene, dt) {
    // Salta si el pájaro está a punto de tocar el suelo
    if (birdData.y > scene.height - scene.floor - 10) {
      this.jump(3);
    }

    // Encuentra la tubería más cercana
    let closestPipe = pipes.find(pipe => pipe.x > birdData.x);

    if (closestPipe) {
      // Si la tubería más cercana está muy cerca y el pájaro está en peligro de colisión
      let distanceToPipe = closestPipe.x - birdData.x;

      // Cuanto más cerca esté la tubería, más fuerte es el salto
      if (distanceToPipe < 150 && birdData.y > closestPipe.pipeHeight) {
        this.jump(2); // Fuerza de salto media si está cerca pero no demasiado
      }
      else if (distanceToPipe < 100 && birdData.y > closestPipe.pipeHeight) {
        this.jump(3); // Fuerza de salto máxima si está muy cerca de la tubería
      }
    }
  }
}

export const color = 0xff00ff;
